<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/22.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="InputsBox.InputsBoxController"
            prefHeight="200.0" maxWidth="200.0">

   <top>
      <Label text="Inputs:" textFill="WHITE" style="-fx-background-color: purple;" maxWidth="Infinity">
         <font><Font size="16.0"/></font>
         <BorderPane.margin><Insets top="0" right="10" bottom="6" left="10"/></BorderPane.margin>
         <padding><Insets top="6" right="10" bottom="6" left="10"/></padding>
      </Label>
   </top>

   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background-color: transparent; -fx-border-color: purple;">
         <content>
            <VBox fx:id="inputsList" spacing="6.0" fillWidth="true">
               <padding><Insets top="6" right="10" bottom="10" left="10"/></padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <padding>
      <Insets left="60.0" top="5.0" right="0.0"/>
   </padding>
</BorderPane>
