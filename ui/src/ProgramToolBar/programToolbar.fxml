<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>

<?import javafx.scene.layout.Region?>
<BorderPane maxWidth="Infinity" prefHeight="60.0" styleClass="program-toolbar" fx:controller="ProgramToolBar.ProgramToolbarController" xmlns="http://javafx.com/javafx/22.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@program-toolbar.css"/>
   </stylesheets>
   <center>
      <HBox maxWidth="Infinity" HBox.hgrow="ALWAYS" prefHeight="50.0" spacing="5.0" BorderPane.alignment="CENTER_LEFT" style="-fx-padding:5 5 5 5; ">
         <children>
            <ChoiceBox fx:id="selectProgramChoice" prefWidth="250" prefHeight="43.0" style="-fx-background-color: purple;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="CollapseButton" text="Collapse" textFill="WHITE" prefWidth="100" prefHeight="43.0" style="-fx-background-color: purple;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="CurrentOrMaxDegreeButton" prefWidth="150" prefHeight="43.0" style="-fx-background-color: transparent; -fx-text-fill: #9a0cb2; -fx-border-color: purple;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="ExpandButton" text="Expand" textFill="WHITE" prefWidth="100" prefHeight="43.0" style="-fx-background-color: purple;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <ChoiceBox fx:id="HighlightChoices" prefWidth="250" prefHeight="43.0" style="-fx-background-color: purple;"/>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="5.0" top="7.0" />
         </padding>
      </HBox>
   </center>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets left="5.0" />
   </padding>
</BorderPane>
