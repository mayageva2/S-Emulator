<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="50.0"
            fx:controller="RunButtons.RunButtonsController"
            xmlns="http://javafx.com/javafx/22.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox spacing="30.0" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnRun"     onAction="#onRun"     prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: purple;" text="▶" textFill="#cf94d4"><font><Font size="20.0"/></font></Button>
            <Button fx:id="btnDebug"   onAction="#onDebug"   prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: purple;" text="🐞" textFill="#cf94d4"><font><Font size="20.0"/></font></Button>
            <Button fx:id="btnStop"    onAction="#onStop"    prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: purple;" text="⏹" textFill="#cf94d4"><font><Font size="20.0"/></font></Button>
            <Button fx:id="btnResume"  onAction="#onResume"  prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: purple;" text="⏸" textFill="#cf94d4"><font><Font size="20.0"/></font></Button>
            <Button fx:id="btnStepBack" onAction="#onStepBack" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: purple;" text="⏮" textFill="#cf94d4"><font><Font size="20.0"/></font></Button>
            <Button fx:id="btnStepOver" onAction="#onStepOver" prefHeight="40.0" prefWidth="50.0" style="-fx-background-color: purple;" text="⏭" textFill="#cf94d4"><font><Font size="20.0"/></font></Button>
         </children>
         <padding><Insets left="25" /></padding>
      </HBox>
   </center>
</BorderPane>
