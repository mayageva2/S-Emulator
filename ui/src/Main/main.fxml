<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<BorderPane xmlns="http://javafx.com/javafx/22.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.MainController" maxWidth="Infinity">

    <top>
        <VBox spacing="2" style="-fx-padding: 6 10 0 10" >
            <fx:include fx:id="header" source="../HeaderAndLoadButton/headerAndLoadButton.fxml" />
        </VBox>
    </top>

    <center>
        <VBox spacing="0" fillWidth="true" style="-fx-padding: 0 10 10 10">

            <GridPane hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="NEVER"/>
            </columnConstraints>
                <fx:include fx:id="toolbar" source="../ProgramToolBar/programToolbar.fxml" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS"/>
                <fx:include fx:id="RunButtons" source="../RunButtons/RunButtons.fxml" GridPane.columnIndex="1"  GridPane.halignment="RIGHT"/>
            </GridPane>

            <HBox fx:id="topSplit" alignment="CENTER_LEFT" spacing="10">
                <VBox fx:id="contentBox" fillWidth="true" maxWidth="Infinity" spacing="0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <fx:include fx:id="instructions" source="../InstructionsTable/InstructionsTable.fxml" VBox.vgrow="ALWAYS" />
                    <fx:include fx:id="summaryLine" source="../SummaryLine/summaryLine.fxml" VBox.vgrow="ALWAYS"/>
                </VBox>
                <HBox fx:id="sidePanels" alignment="TOP_LEFT" spacing="10"  HBox.hgrow="ALWAYS">
                    <padding><Insets left="25"/></padding>
                    <fx:include fx:id="varsBox" source="../VariablesBox/VariablesBox.fxml" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
                    <fx:include fx:id="inputsBox" source="../InputsBox/InputsBox.fxml" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
                </HBox>
            </HBox>

            <HBox fx:id="bottomSplit">
                <VBox fx:id="historyChainBox" fillWidth="true" maxWidth="Infinity" spacing="20" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <fx:include fx:id="historyChain" source="../SelectedInstructionHistoryChainTable/SelectedInstructionHistoryChainTable.fxml" VBox.vgrow="ALWAYS"/>
                    <padding><Insets right="5"/></padding>
                </VBox>
                <VBox fx:id="statisticsBox" fillWidth="true" maxWidth="Infinity" spacing="20" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <padding><Insets left="20"/></padding>
                    <fx:include fx:id="statisticsTable" source="../StatisticsTable/StatisticsTable.fxml" VBox.vgrow="ALWAYS"/>
                </VBox>
            </HBox>

        </VBox>
    </center>
</BorderPane>
