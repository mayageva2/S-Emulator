<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/22.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Main.MainController" maxWidth="Infinity">

    <top>
        <VBox spacing="2" style="-fx-padding: 6 10 0 10">
            <fx:include fx:id="header" source="../HeaderAndLoadButton/headerAndLoadButton.fxml"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="0" fillWidth="true" style="-fx-padding: 0 10 10 10">

            <GridPane hgap="10" alignment="BASELINE_LEFT">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="NEVER" minWidth="420" prefWidth="420"/>
                </columnConstraints>

                <fx:include fx:id="toolbar"
                            source="../ProgramToolBar/programToolbar.fxml"
                            GridPane.columnIndex="0" GridPane.hgrow="ALWAYS"/>

                <HBox GridPane.columnIndex="1" alignment="BASELINE_RIGHT" fillHeight="true">
                    <fx:include fx:id="RunButtons" source="../RunButtons/RunButtons.fxml"/>
                </HBox>
            </GridPane>

            <HBox fx:id="topSplit" alignment="CENTER_LEFT" spacing="10">
                <ScrollPane fitToWidth="true" fitToHeight="true"
                            hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                            style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0; -fx-border-color: transparent;">
                    <content>
                        <VBox fx:id="contentBox" fillWidth="true" maxWidth="Infinity" spacing="0"
                              HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <fx:include fx:id="instructions" source="../InstructionsTable/InstructionsTable.fxml"
                                        VBox.vgrow="ALWAYS"/>
                            <fx:include fx:id="summaryLine" source="../SummaryLine/summaryLine.fxml"
                                        VBox.vgrow="ALWAYS"/>
                        </VBox>
                    </content>
                </ScrollPane>

                <ScrollPane fitToWidth="true" fitToHeight="true"
                            hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                            style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0; -fx-border-color: transparent;">
                    <content>
                        <HBox fx:id="sidePanels" alignment="TOP_LEFT" spacing="10" HBox.hgrow="ALWAYS">
                            <!-- הוסר padding שמאלי כדי ליישר טורים -->
                            <fx:include fx:id="varsBox"   source="../VariablesBox/VariablesBox.fxml"
                                        HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
                            <fx:include fx:id="inputsBox" source="../InputsBox/InputsBox.fxml"
                                        HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"/>
                        </HBox>
                    </content>
                </ScrollPane>
            </HBox>

            <HBox fx:id="bottomSplit">
                <ScrollPane fitToWidth="true" fitToHeight="true"
                            vbarPolicy="AS_NEEDED" hbarPolicy="AS_NEEDED"
                            style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0; -fx-border-color: transparent;">
                    <content>
                        <VBox fx:id="historyChainBox" fillWidth="true" maxWidth="Infinity" spacing="20"
                              HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <fx:include fx:id="historyChain" source="../SelectedInstructionHistoryChainTable/SelectedInstructionHistoryChainTable.fxml"
                                        VBox.vgrow="ALWAYS"/>
                        </VBox>
                    </content>
                </ScrollPane>

                <ScrollPane fitToWidth="true" fitToHeight="true"
                            vbarPolicy="AS_NEEDED" hbarPolicy="AS_NEEDED"
                            style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0; -fx-border-color: transparent;">
                    <content>
                        <VBox fx:id="statisticsBox" fillWidth="true" maxWidth="Infinity" spacing="20"
                              HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <fx:include fx:id="statisticsTable"    source="../StatisticsTable/StatisticsTable.fxml"
                                        VBox.vgrow="ALWAYS"/>
                            <fx:include fx:id="statisticsCommands" source="../StatisticsCommands/StatisticsCommands.fxml"
                                        VBox.vgrow="ALWAYS"/>
                        </VBox>
                    </content>
                </ScrollPane>
            </HBox>

        </VBox>
    </center>
</BorderPane>
