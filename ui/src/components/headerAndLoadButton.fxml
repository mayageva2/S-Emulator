<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.layout.VBox?>
<BorderPane nodeOrientation="LEFT_TO_RIGHT" xmlns="http://javafx.com/javafx/22.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HeaderAndLoadButtonController">
   <top>
      <HBox alignment="CENTER" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="S-Emulator" textFill="#9a0cb2d7">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="5" style="-fx-padding: 10;">
         <HBox prefHeight="90.0" prefWidth="900.0" spacing="10.0" BorderPane.alignment="CENTER" style="-fx-padding: 10;">
            <children>
               <Button fx:id="LoadButton" mnemonicParsing="false" onAction="#handleLoadButtonClick" prefHeight="43.0" prefWidth="133.0" style="-fx-background-color: purple;" text="Load File" textFill="WHITE" HBox.hgrow="NEVER">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Button>
               <TextField maxWidth="Infinity" prefHeight="43.0" prefWidth="473.0" HBox.hgrow="ALWAYS" fx:id="xmlPathField" />

            </children>
            <padding>
               <Insets left="10.0" />
            </padding>

         </HBox>
         <Label fx:id="statusLabel" textFill="black"/>
      </VBox>
   </center>
</BorderPane>
