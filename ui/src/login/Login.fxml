<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/22.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="login.LoginController"
            prefWidth="400" prefHeight="250"
            style="-fx-background-color: #f8f9fa;">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="S-Emulator Login"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="Enter your username:" style="-fx-font-size: 14px;"/>
            <TextField fx:id="usernameField"
                       promptText="Username"
                       maxWidth="200"/>
            <Label fx:id="errorLabel"
                   textFill="red"
                   visible="false"/>
            <Button text="Login"
                    onAction="#onLoginClicked"
                    style="-fx-background-color: purple; -fx-text-fill: white;"/>
        </VBox>
    </center>

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</BorderPane>
